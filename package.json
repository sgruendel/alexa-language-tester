{
  "name": "alexa-language-tester",
  "version": "1.2.1",
  "description": "Alexa Skill to test the various voices available for speech output",
  "main": "index.js",
  "scripts": {
    "invoke": "aws lambda invoke --function-name languageTester --payload fileb://test/events/alexa-start-session.json test/out.txt && cat test/out.txt",
    "test:unit": "nyc --reporter=lcov --reporter=text mocha test/unit/*",
    "test:integration": "mocha --timeout=20000 test/integration/*",
    "test": "npm run test:unit",
    "deploy-lambda": "npm prune --production && npm run lambda-zip && npm run lambda-update && npm install",
    "lambda-zip": "zip -x 'node_modules/.cache/*' -r index.zip node_modules && cd src && zip ../index.zip *",
    "lambda-update": "aws lambda update-function-code --function-name languageTester --zip-file fileb://index.zip",
    "deploy-skill": "ask deploy --target skill",
    "deploy-model": "ask deploy --target model"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgruendel/alexa-language-tester.git"
  },
  "keywords": [
    "alexa",
    "skill",
    "language",
    "polly",
    "voices"
  ],
  "author": "Stefan Gr√ºndel",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sgruendel/alexa-language-tester/issues"
  },
  "homepage": "https://github.com/sgruendel/alexa-language-tester#readme",
  "dependencies": {
    "ask-sdk-core": "2.8.0",
    "ask-sdk-model": "1.28.0",
    "i18next": "19.6.0",
    "i18next-sprintf-postprocessor": "0.2.2",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "alexa-skill-test-framework": "1.2.4",
    "chai": "4.2.0",
    "eslint": "6.8.0",
    "eslint-config-strongloop": "2.1.0",
    "mocha": "7.1.1",
    "nyc": "15.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "extends": "strongloop",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        120,
        4,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
        }
      ]
    }
  }
}
